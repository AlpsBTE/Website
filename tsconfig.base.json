{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@alpsbte/about-us": ["libs/about-us/src/index.ts"],
      "@alpsbte/application": ["libs/application/src/index.ts"],
      "@alpsbte/contact": ["libs/contact/src/index.ts"],
      "@alpsbte/downloads": ["libs/downloads/src/index.ts"],
      "@alpsbte/error": ["libs/error/src/index.ts"],
      "@alpsbte/faq": ["libs/faq/src/index.ts"],
      "@alpsbte/gallery": ["libs/gallery/src/index.ts"],
      "@alpsbte/home": ["libs/home/src/index.ts"],
      "@alpsbte/loader": ["libs/loader/src/index.ts"],
      "@alpsbte/router": ["libs/router/src/index.ts"],
      "@alpsbte/shared/components": ["libs/shared/components/src/index.ts"],
      "@alpsbte/shared/config": ["libs/shared/config/src/index.ts"],
      "@alpsbte/shared/language": ["libs/shared/language/src/index.ts"],
      "@alpsbte/shared/stores": ["libs/shared/stores/src/index.ts"],
      "@alpsbte/shared/theme": ["libs/shared/theme/src/index.ts"],
      "@alpsbte/shared/util": ["libs/shared/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
